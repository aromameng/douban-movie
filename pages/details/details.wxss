.details-page .m-main{
  padding: 40rpx 30rpx;
}
.m-title{
  width: 100%;
  font-size:42rpx;
  display: block;
  font-weight: 600;
}
.m-image{
  text-align: center;
  width: 100%;
  height:620rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f7f8;
}
.m-image .img{
  width:400rpx;
  height: 570rpx; 
}
.m-abstract{
  font-size: 24rpx;
  color: #ccc;
  line-height: 26px;
}
.m-abstract view{
  display: block;
}
.m-abstract text{
  margin: 0 5px;
  display: inline-block;
}
.m-summary{
  display: block;
  font-size: 28rpx;
  line-height:26px;
  padding:15rpx 0;
  text-indent: 2em;
}
.s-title{
  font-size:26rpx;
  color: #999;
  margin-top: 20px;
  display: block;
}
